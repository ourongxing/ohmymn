{
  "compilerOptions": {
    "noEmit": true,
    "module": "ESNext",
    "target": "ES2020",
    "allowJs": true,
    "sourceMap": false,
    "noImplicitAny": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "ignoreDeprecations": "5.0",
    "resolveJsonModule": true,
    "importHelpers": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "lib": ["ES2020"]
  },
  "include": ["src/**/*.ts", "src/utils/third party/*.js"]
}
